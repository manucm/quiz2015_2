<div>
	<span>Listado de Preguntas</span> 
	<form class="en-linea" method="get" action="">
		<input type="text" name="search" placeholder="busca pregunta">
		<input type="submit" value="Buscar">
	</form>
</div>
<table class="tabla">
	<thead>
		<tr>
			<th>Pregunta</th>
			<th>TemÃ¡tica</th>
			<% if (session.user) { %>
			<th>Opciones</th>
			<% } %>
		</tr>
	</thead>
	<% var i; for (i=0; i < quizes.length; i++) { %>
		<tr><td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
			<td><%= quizes[i].tematica %></td>
			<% if (session.user) { %>
			<td><a href="quizes/<%= quizes[i].id%>/edit" class="dis-inline"><button>editar</button></a>
				<form method="post" action="quizes/<%= quizes[i].id %>?_method=delete" class="dis-inline">
					<button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
						borrar
					</button>
				</form>
			</td>
			<% } %>
		</tr>
	<% } %>
</table>
<% if (session.user) { %>
<a href="/quizes/new" class="a-btn"><button type="button">Crear pregunta</button></a>
<% } %>